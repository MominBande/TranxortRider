<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent center -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <size android:width="270dp" android:height="270dp" />
        </shape>
    </item>
    
    <!-- Top-left corner -->
    <item android:gravity="left|top">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <size android:width="40dp" android:height="4dp" />
        </shape>
    </item>
    <item android:gravity="left|top">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <size android:width="4dp" android:height="40dp" />
        </shape>
    </item>
    
    <!-- Top-right corner -->
    <item android:gravity="right|top">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <size android:width="40dp" android:height="4dp" />
        </shape>
    </item>
    <item android:gravity="right|top">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <size android:width="4dp" android:height="40dp" />
        </shape>
    </item>
    
    <!-- Bottom-left corner -->
    <item android:gravity="left|bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <size android:width="40dp" android:height="4dp" />
        </shape>
    </item>
    <item android:gravity="left|bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <size android:width="4dp" android:height="40dp" />
        </shape>
    </item>
    
    <!-- Bottom-right corner -->
    <item android:gravity="right|bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <size android:width="40dp" android:height="4dp" />
        </shape>
    </item>
    <item android:gravity="right|bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <size android:width="4dp" android:height="40dp" />
        </shape>
    </item>
</layer-list> 
