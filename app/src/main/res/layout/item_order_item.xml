<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Item Name and Quantity -->
        <TextView
            android:id="@+id/itemNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/itemPriceText"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:textColor="@color/light_text_primary"
            android:textSize="16sp"
            tools:text="Chicken Burger" />

        <TextView
            android:id="@+id/itemQuantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemNameText"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif"
            android:textColor="@color/light_text_secondary"
            android:textSize="14sp"
            tools:text="x2" />

        <!-- Price -->
        <TextView
            android:id="@+id/itemPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/light_text_primary"
            android:textSize="16sp"
            tools:text="$12.99" />
    </RelativeLayout>

    <!-- Notes Section (if available) -->
    <TextView
        android:id="@+id/itemNotesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-light"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:textColor="@color/light_text_secondary"
        android:textSize="14sp"
        android:textStyle="italic"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/ic_info"
        app:drawableTint="@color/light_text_secondary"
        tools:text="No onions, extra sauce"
        tools:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_divider" />

</LinearLayout> 
