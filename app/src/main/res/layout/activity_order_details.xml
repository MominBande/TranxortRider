<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background">

    <!-- Top Bar with gradient background and elevation -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bar_gradient"
        android:elevation="4dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="18dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_back"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:iconTint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Order Details"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAWB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="AWB"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/transparent"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:icon="@drawable/ic_download"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomNav"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Order Info Card with improved styling -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            
                            <TextView
                                android:id="@+id/tvOrderNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#700000000003"
                                android:textColor="@color/light_text_primary"
                                android:textSize="20sp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap to copy"
                                android:textColor="@color/light_text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-light" />
                        </LinearLayout>
                        
                        <TextView
                            android:id="@+id/tvCOD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COD 0.00 SAR"
                            android:textColor="@color/primary"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium"
                            android:background="@drawable/cod_background"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAssignedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Assigned: 2023-10-17"
                        android:textColor="@color/light_text_secondary"
                        android:fontFamily="sans-serif"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/status_background"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            android:text="Pending"
                            android:textColor="@color/purple_200"
                            android:fontFamily="sans-serif-medium" />

                        <ImageView
                            android:id="@+id/statusIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/ic_delivery"
                            app:tint="@color/primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Delivery"
                            android:textColor="@color/primary"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center_vertical" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sender & Recipient Card with improved styling -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sender &amp; Recipient"
                        android:textColor="@color/light_text_primary"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Sender Section with improved styling and profile image -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">
                        
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/stat_icon_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_sender"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            app:tint="@android:color/white" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sender"
                                android:textColor="@color/light_text_secondary"
                                android:fontFamily="sans-serif-light" />

                            <TextView
                                android:id="@+id/tvSenderName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Charlie Wilson"
                                android:textColor="@color/light_text_primary"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tvSenderAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="123 Main St, Los Angeles CA"
                                android:textColor="@color/light_text_secondary"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="end">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCallSender"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            app:icon="@drawable/ic_call"
                            app:iconTint="@android:color/white"
                            app:iconSize="24dp"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="24dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:backgroundTint="@color/primary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMessageSender"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:icon="@drawable/ic_message"
                            app:iconTint="@android:color/white"
                            app:iconSize="24dp"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="24dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:backgroundTint="@color/primary" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="20dp"
                        android:background="?dividerColor" />

                    <!-- Recipient Section with improved styling and profile image -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">
                        
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/stat_icon_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_recipient"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            app:tint="@android:color/white" />
                        
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recipient"
                                android:textColor="@color/light_text_secondary"
                                android:fontFamily="sans-serif-light" />

                            <TextView
                                android:id="@+id/tvRecipientName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Alice Smith"
                                android:textColor="@color/light_text_primary"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tvRecipientAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="456 Oak St, San Francisco CA"
                                android:textColor="@color/light_text_secondary"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="end">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCallRecipient"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            app:icon="@drawable/ic_call"
                            app:iconTint="@android:color/white"
                            app:iconSize="24dp"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="24dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:backgroundTint="@color/primary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMessageRecipient"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:icon="@drawable/ic_message"
                            app:iconTint="@android:color/white"
                            app:iconSize="24dp"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="24dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:backgroundTint="@color/primary" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Parcel Details Card with improved styling -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parcel Details"
                        android:textColor="@color/light_text_primary"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:columnCount="2"
                        android:rowCount="2">

                        <!-- Reference ID with improved styling -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="#F5F7FA">
                            
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reference ID"
                                    android:textColor="@color/light_text_secondary"
                                    android:fontFamily="sans-serif-light" />

                                <TextView
                                    android:id="@+id/tvReferenceId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="REF-C3003"
                                    android:textColor="@color/primary"
                                    android:textSize="18sp"
                                    android:fontFamily="sans-serif-medium" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Parcel Value with improved styling -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="#F5F7FA">
                            
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Parcel Value"
                                    android:textColor="@color/light_text_secondary"
                                    android:fontFamily="sans-serif-light" />

                                <TextView
                                    android:id="@+id/tvParcelValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="0.00 SAR"
                                    android:textColor="@color/primary"
                                    android:textSize="18sp"
                                    android:fontFamily="sans-serif-medium" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Parcel Type with improved styling -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="#F5F7FA">
                            
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Parcel Type"
                                    android:textColor="@color/light_text_secondary"
                                    android:fontFamily="sans-serif-light" />

                                <TextView
                                    android:id="@+id/tvParcelType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="Standard"
                                    android:textColor="@color/primary"
                                    android:textSize="18sp"
                                    android:fontFamily="sans-serif-medium" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Box Count with improved styling -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="#F5F7FA">
                            
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Box Count"
                                    android:textColor="@color/light_text_secondary"
                                    android:fontFamily="sans-serif-light" />

                                <TextView
                                    android:id="@+id/tvBoxCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="1"
                                    android:textColor="@color/primary"
                                    android:textSize="18sp"
                                    android:fontFamily="sans-serif-medium" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Customer Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Details"
                        android:textColor="@color/light_text_primary"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_call"
                            app:tint="@color/primary"
                            android:layout_marginEnd="12dp" />
                            
                        <TextView
                            android:id="@+id/customerPhoneText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1 (555) 123-4567"
                            android:textColor="@color/light_text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/primary"
                            android:layout_marginEnd="12dp" />
                            
                        <TextView
                            android:id="@+id/deliveryAddressText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123 Main St, New York, NY 10001"
                            android:textColor="@color/light_text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Restaurant Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Restaurant Details"
                        android:textColor="@color/light_text_primary"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_call"
                            app:tint="@color/primary"
                            android:layout_marginEnd="12dp" />
                            
                        <TextView
                            android:id="@+id/restaurantPhoneText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1 (555) 987-6543"
                            android:textColor="@color/light_text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Special Instructions Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/specialInstructionsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Special Instructions"
                        android:textColor="@color/light_text_primary"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/specialInstructionsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please leave at the door and ring the doorbell."
                        android:textColor="@color/light_text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Order Items Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Items"
                        android:textColor="@color/light_text_primary"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/orderItemsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?dividerColor"
                        android:layout_marginVertical="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Subtotal"
                            android:textColor="@color/light_text_secondary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />
                            
                        <TextView
                            android:id="@+id/subtotalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$24.99"
                            android:textColor="@color/light_text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delivery Fee"
                            android:textColor="@color/light_text_secondary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />
                            
                        <TextView
                            android:id="@+id/deliveryFeeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$5.00"
                            android:textColor="@color/light_text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Amount"
                            android:textColor="@color/light_text_primary"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />
                            
                        <TextView
                            android:id="@+id/totalAmountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$29.99"
                            android:textColor="@color/primary"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Payment Method"
                            android:textColor="@color/light_text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />
                            
                        <TextView
                            android:id="@+id/paymentMethodText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cash on Delivery"
                            android:textColor="@color/light_text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    
    <!-- Bottom Action Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/bottomNavigation"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/navigationButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Map"
                android:textSize="10sp"
                android:textColor="@color/primary"
                app:icon="@drawable/ic_location"
                app:iconTint="@color/primary"
                app:strokeColor="@color/primary"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/callCustomerButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Sender"
                android:textSize="10sp"
                android:textColor="@color/primary"
                app:icon="@drawable/ic_call"
                app:iconTint="@color/primary"
                app:strokeColor="@color/primary"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/callRestaurantButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Receiver"
                android:textSize="10sp"
                android:textColor="@color/primary"
                app:icon="@drawable/ic_call"
                app:iconTint="@color/primary"
                app:strokeColor="@color/primary"
                app:cornerRadius="8dp" />
        </LinearLayout>
        
        <!-- Pickup Button - Visible only for ACCEPTED orders -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/pickupButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Mark as Picked Up"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary"
            app:icon="@drawable/ic_check"
            app:iconTint="@android:color/white"
            app:cornerRadius="8dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/actionButtonsContainer">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/secondaryActionButton"
                style="@style/Widget.TranxortRider.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Reject"
                android:textColor="#9B0000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:strokeColor="#9B0000"
                app:strokeWidth="1.5dp"
                app:backgroundTint="#FFEBEE"
                app:cornerRadius="8dp"
                app:rippleColor="#F8BBD0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/primaryActionButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Accept"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
