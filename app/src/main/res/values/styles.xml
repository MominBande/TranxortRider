<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Widget Style for TranxortRider -->
    <style name="Widget.TranxortRider" parent="@android:style/Widget" />
    
    <style name="BottomNavigationViewStyle">
        <item name="labelVisibilityMode">selected</item>
        <item name="android:background">@color/light_background</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="elevation">8dp</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="android:minHeight">64dp</item>
        <!-- Fix for system navigation conflicts -->
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    
    <!-- Style for circular ImageViews -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- App Bar Styles -->
    <style name="Theme.TranxortRider.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.TranxortRider.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.TranxortRider.Toolbar" parent="Widget.TranxortRider">
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.TranxortRider.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.TranxortRider.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Button Styles -->
    <style name="TextAppearance.TranxortRider.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Widget.TranxortRider.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.TranxortRider.Button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Outlined Button Style -->
    <style name="Widget.TranxortRider.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.TranxortRider.Button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.TranxortRider.CardView" parent="Widget.TranxortRider">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">?attr/cardBackgroundColor</item>
    </style>
    
    <!-- Chip Style -->
    <style name="Widget.TranxortRider.Chip" parent="Widget.TranxortRider">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <!-- Text Appearance Styles -->
    <style name="TextAppearance.TranxortRider.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/light_text_primary</item>
    </style>

    <style name="TextAppearance.TranxortRider.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_text_primary</item>
    </style>

    <style name="TextAppearance.TranxortRider.Subheading" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_text_primary</item>
    </style>

    <style name="TextAppearance.TranxortRider.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_text_primary</item>
    </style>

    <style name="TextAppearance.TranxortRider.Body.Small" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_text_primary</item>
    </style>

    <style name="TextAppearance.TranxortRider.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_text_secondary</item>
    </style>

    <style name="TextAppearance.TranxortRider.Tab" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.TranxortRider.Link" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- TopBar Style for consistent headers across all screens -->
    <style name="Widget.TranxortRider.TopBar" parent="Widget.TranxortRider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/top_bar_gradient</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    
    <style name="RoundedDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
    
</resources> 